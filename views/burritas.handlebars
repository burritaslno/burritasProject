<div class="header">
	<h1 align="center">{{title}}</h1>
</div>
<div class="container">
	<!-- Ingredientes iran aca -->
	<div class="form-container">
		<form method="post" action="/products/burritas/order">
			<div class="form-group">
				<label>Cantidad</label>
				<input type="text" class="form-control" name="amount" placeholder="Introducir cantidad de burritas">
			</div>
			<div class="form-group">
				<label>Comentarios</label>
				<textarea class="form-control" name="comments" placeholder="Ingresar solicitud especial a la burra"></textarea>
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary pull-right" value="Encargar burrita(s)">
				<a href="/dashboard" class="btn btn-default">Back</a>
			</div>
		</form>
	</div>
</div>